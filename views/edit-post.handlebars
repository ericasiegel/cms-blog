{{!-- Edit Post --}}


<article>
    <div class="box">
        {{!-- back to dashboard link --}}
        <a class="link" href="/dashboard"> &larr; Back to dashboard</a>
    </div>
    <br/>
    <br/>
    <div class="box">
        <h2>Edit: <i>{{ post.title }}</i></h2>
    </div>
    <br/>
    <div class="box">
        {{!-- edit post form --}}
        <form class="edit-post-form">
            <div class="form-title">
                <h2>Edit Post</h2>
            </div>
            <div class="form-content">
                <div>
                    <label for="post-title">Title</label>
                    <input type="text" id="post-title" name="post-title" />
                </div>
                <div>
                    <label for="post-content">Content</label>
                    <textarea id="post-content" name="post-content"></textarea>
                </div>
                <div>
                    created by you on {{format_date post.created_at}}
                </div>
                <div>
                    <button type="submit">Save post</button>
                    <button type="button" class="delete-post-btn">Delete post</button>
                </div>
            </div>
        </form>
    </div>
</article>
{{!-- comment on edit post form --}}
<div class="box">
    <form class="comment-form">
        <div class="form-title">
            <h2>Add A Comment</h2>
        </div>
        <div class="form-content">
            <div>
                <textarea name="comment-body"></textarea>
            </div>

            <div>
                <button type="submit">add comment</button>
            </div>
        </div>
    </form>
</div>
{{!-- show comments for the individual post --}}
{{> comments post.comments}}

{{!-- Script pages --}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
