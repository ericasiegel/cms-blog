{{!-- comment info script --}}
<div class="comments">
    {{#each this}}
        <section class="comment">
            <div class="meta">
            by <i>{{user.username}}</i> on {{format_date created_at}}
            </div>
            <div class="text">
            {{comment_text}}
            </div>
        </section>
    {{/each}}
</div>