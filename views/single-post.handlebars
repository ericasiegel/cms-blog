{{!-- This is the page showing a single blog post --}}

{{!-- Show selected blog post --}}
<div class="post-single">
    {{> post-info post }}
</div>

{{!-- if the user is logged in this comment form will be shown --}}
{{#if loggedIn}}
<div class="box">
    <form class="comment-form">
        <div class="form-title">
            <h2>Add A Comment</h2>
        </div>
        <div class="form-content">
            <div>
                <textarea name="comment-body"></textarea>
            </div>

            <div>
                <button type="submit">add comment</button>
            </div>
        </div>
    </form>
</div>
{{/if}}

{{!-- Show comments --}}
{{> comments post.comments}}

{{!-- if the user is logged in this javascript page will be active --}}
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}